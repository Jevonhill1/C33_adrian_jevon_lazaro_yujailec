<%= link_to category do %>
  <h3 class="recipe-link"><%= category.name.upcase %></h3>
<% end %>

<section>
  <div class="category-container">
    <div class="pic-row">  
      <% category.recipes.first(10).each do |recipe| %>
        <% if recipe.image.attached? %>
          <div class="pic-wrapper">
            <%= link_to recipe, class:"cat-index-link" do %>
              <%= image_tag recipe.image.variant(resize_to_limit: [500, 500]), class: "rp" %>
              <span class="category-recipe-tittle"><%= recipe.name.titleize %></span>
              <span class='overlay'></span>
            <% end %>
          </div>
        <% end %>
      <% end %>  
    </div>
  </div>
</section>â€‹ 
