<h3><%= category.name %></h3>
<section>
  <div class="category-container">
    <div class="pic-row">  
      <% category.recipes.first(10).each do |recipe| %>
        <% if recipe.image.attached? %>
          <%= image_tag recipe.image.variant(resize_to_limit: [500, 500]), class: "featured_recipe" %>
        <% end %>
      <% end %>  
    </div>
  </div>
