<div class="recipe-page-div">
      
    <div class="top">
      <h1 class="recipe-name"><%= @recipe.name %></h1>
      <h1 class="cuisine">Japanese <%= @recipe.categories.name %></h1>
    </div>

    <div class="video">
      <iframe class="recipe-video"  width="75%" 
        height="500" 
        src="https://www.youtube.com/embed/zGcYabz3hYg" 
        frameborder="0" 
        allow="accelerometer; a
        utoplay; encrypted-media; 
        gyroscope; 
        picture-in-picture" 
        allowfullscreen>
        class="recipe-page-video" width="90%" text-align="center"
          control><% @recipe.video_url %></iframe>
    </div>    
      
      <div class="recipe-attributes">
        <p class="cook-time">Cook time: <%= @recipe.cook_time %> min </p>
        <p class="recipe-difficulty">Skill Level: <%= @recipe.difficulty %></p>
      </div>
      <p class="serving-size">Serves <%= @recipe.servings %></p>
      
      <ul class="nutrition">
        <li class="recipe-calories">Calories <%= @recipe.calories %></li> &nbsp;&bull;
        <li class="recipe-fat">Fat <%= @recipe.fat %>g</li> &nbsp;&bull;
        <li class="recipe-carbs">Carbs <%= @recipe.carbs %>g</li> &nbsp;&bull;
        <li class="recipe-protein">Protein <%= @recipe.protein %>g</li> &nbsp;&bull;
        <li class="recipe-fiber">Fiber <%= @recipe.fiber %>g</li> &nbsp;&bull;
        <li class="recipe-sugar">Sugar <%= @recipe.sugar %>g</li>
      </ul>

      <h2>Ingredients</h2>
      <ul class="ingredients">
        <li>Egg</li>
        <li>Oil</li>
        </p>
      </ul>
      
      <div class="instructions">
        <h2>Instructions<%= @has_rich_text %></h2>
        <p><%= @recipe.recipe_details %></p>
      </div>
      

        <button rating>Rate This Recipe</button>
      
   
  </div>