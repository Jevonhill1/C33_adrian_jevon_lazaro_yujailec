<h1><%= @recipe.name %></h1>

<p>
  Overall User Rating :
  <% @recipe.ratings
  <% end %>
</p>



<p>
 Your Rating : 
 <% if @recipe.ratings.find_by(user_id: current_user.id, recipe_id: @recipe.id).present? %>
  <%= @recipe.ratings.find_by(user_id: current_user.id, recipe_id: @recipe.id).score %> / 5
 <% else %>
  Rate this recipe below!
<% end %>
</p>

<p>
  Recipe Details
  <%= @recipe.recipe_details %>
</p>

<%= render 'comments/form', recipe: @recipe, comment: @comment %>
<% @recipe.comments.each do |comment| %>
  <% if comment.content? %>
    <p>
      <%= comment.user.email%> : <%= comment.content %>
      <% if current_user.id == comment.user.id || current_user.admin?%>
        <%= link_to 'Remove Comment', [@recipe, comment],
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
      <% end %>
    </p>
  <% end %>
<% end %>
