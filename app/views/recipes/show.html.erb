




  <div class="recipe-page-div">
      
    <div class="top">
      <h3 class="recipe-name"><%= @recipe.name %></h3>
      <p class="cook-time">Cook Time <%= @recipe.cook_time %> min</p>
    </div>

      <iframe class="recipe-video"  width="75%" 
        height="500" 
        src="https://www.youtube.com/embed/zGcYabz3hYg" 
        frameborder="0" 
        allow="accelerometer; a
        utoplay; encrypted-media; 
        gyroscope; 
        picture-in-picture" 
        allowfullscreen>
        class="recpie-page-video width="90%" text-align="center"
          control><% @recipe.video_url %></iframe>
        
      
      <div class="recipe-attributes">
        <p class="recipe-serving">Servings <%= @recipe.servings %></p>
        <p class="recipe-difficulty">Difficulty <%= @recipe.difficulty %></p>
      </div>

      <ul class="intangibles">
        <li class="recipe-calories">Calories <%= @recipe.calories %>g</li>
        <li class="recipe-carbs">Carbs <%= @recipe.carbs %>g</li>
        <li class="recipe-protein">Protein <%= @recipe.protein %>g</li>
      </ul>
      
      <div class="ingredients">
        <h3>Ingredients<%= @has_rich_text %></h3>
        <p><%= @recipe.recipe_details %></p>
      </div>
      

        <button rating>Rate This Recipe</button>
      
   
  </div>