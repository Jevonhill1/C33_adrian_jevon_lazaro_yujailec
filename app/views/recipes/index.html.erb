<% if notice %>
      <div>
        <%= notice %>
      </div>
    <% end %>

<h1>Recipes table</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Servings</th>
      <th>Difficulty</th>
      <th>Calories</th>
      <th>Carbs</th>
      <th>Protein</th>
      <th>Fat</th>
      <th>Sugar</th>
      <th>Fiber</th>
      <th>Vegan</th>
      <th>Gluten Free</th>
      <th>Image Url</th>
      <th>Categories</th>
      <th>Edit</th>
      <th>Delete?</th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.name, recipe_path(recipe)%></td>
        <td><%= recipe.servings %></td>
        <td><%= recipe.difficulty %></td>
        <td><%= recipe.calories %></td>
        <td><%= recipe.carbs %></td>
        <td><%= recipe.protein %></td>
        <td><%= recipe.fat %></td>
        <td><%= recipe.sugar%></td>
        <td><%= recipe.fiber %></td>
        <td><%= recipe.vegan %></td>
        <td><%= recipe.gluten_free %></td>
        <td><%= recipe.image_url %></td>
        <td><%= recipe.categories.pluck(:name).join(", ") %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe_path(recipe),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

