<h1>Meal Fly</h1>

<h2>Featured Recipe</h2>

<% if @featured_recipe %>
  <%= @featured_recipe.name %>
<% else %>
  No recipes match your preferences =(
<% end %>

<h3>Featured Category</h3>

<%= @featured_category.name %>

<ul>
  <% @featured_category.recipes.each do |recipe| %>
    <li><%= recipe.name %></li>
  <% end %>
</ul>
