<%= form_with(model: @recipe, local: true) do |form| %>
  <p>
    <%= form.label :recipe_name %><br>
    <%= form.text_field :name, autocomplete: "off" %>
  </p>

  <p>
    <% @categories.each do |category| %>
      <%= form.label category.name %>
      <%= form.check_box "categories[#{category.id}]",
          checked: @recipe.categories.include?(category) %>
    <% end %>
  </p>
  
  <p>
    <%= form.label :servings, "Serves" %><br>
    <%= form.number_field :servings, min: 1, max: 25 %>
  </p>

  <p>
    <%= form.label :cook_time, "Cook Time (minutes)" %><br>
    <%= form.number_field :cook_time, min: 1, max: 600 %>
  </p>

  <p>
    <%= form.label :difficulty %><br>
    <%= form.select :difficulty,
        options_for_select(Recipe.difficulties.map {|k, v| [k.humanize.capitalize, k]}) %>
  </p>

  <p>
    <%= form.label :calories%><br>
    <%= form.number_field :calories, min: 0%>
  </p>

  <p>
    <%= form.label :carbs%><br>
    <%= form.number_field :carbs, min: 0%>
  </p>

  <p>
    <%= form.label :protein%><br>
    <%= form.number_field :protein, min: 0%>
  </p>

  <p>
    <%= form.label :fat%><br>
    <%= form.number_field :fat, min: 0%>
  </p>

  <p>
    <%= form.label :sugar%><br>
    <%= form.number_field :sugar, min: 0%>
  </p>

  <p>
    <%= form.label :fiber%><br>
    <%= form.number_field :fiber, min: 0%>
  </p>

  <p>
    <%= form.label :image%><br>
    <%= form.file_field :image%>
  </p>

  <p>
    <%= form.label :video_url%><br>
    <%= form.text_field :video_url, autocomplete: "off" %>
  </p>

  <p>
    <%= form.label :recipe_details %>
    <%= form.rich_text_area :recipe_details %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
 
<% end %>
