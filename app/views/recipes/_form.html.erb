<%= form_with(model: @recipe, local: true) do |form| %>
  <p>
    <%= form.label :recipe_name %><br>
    <%= form.text_field :name, autocomplete: "off" %>
  </p>

  <p>
    <% @categories.each do |category| %>
      <%= form.label category.name %>
      <%= form.check_box "categories[#{category.id}]",
          checked: @recipe.categories.include?(category) %>
    <% end %>
  </p>
  
  <p>
    <%= form.label :servings%><br>
    <%= form.number_field :servings, value: nil, min: 1%>
  </p>

  <p>
    <%= form.label :cook_time%><br>
    <%= form.number_field :cooktime, value: nil, min: 1%>
  </p>

  <p>
    <%= form.label :difficulty%><br>
    <%= form.number_field :difficulty, value: nil, min: 1%>
  </p>

  <p>
    <%= form.label :calories%><br>
    <%= form.number_field :calories, value: nil, min: 0%>
  </p>

  <p>
    <%= form.label :carbs%><br>
    <%= form.number_field :carbs, value: nil, min: 0%>
  </p>

  <p>
    <%= form.label :protein%><br>
    <%= form.number_field :protein, value: nil, min: 0%>
  </p>

  <p>
    <%= form.label :fat%><br>
    <%= form.number_field :fat, value: nil, min: 0%>
  </p>

  <p>
    <%= form.label :sugar%><br>
    <%= form.number_field :sugar, value: nil, min: 0%>
  </p>

  <p>
    <%= form.label :fiber%><br>
    <%= form.number_field :fiber, value: nil, min: 0%>
  </p>

  <p>
    <%= form.label :vegan%><br>
    <%= form.check_box :vegan%>
  </p>

  <p>
    <%= form.label :gluten_free%><br>
    <%= form.check_box :gluten_free%>
  </p>

  <p>
    <%= form.label :image_url%><br>
    <%= form.text_field :image_url, autocomplete: "off" %>
  </p>

  <p>
    <%= form.label :video_url%><br>
    <%= form.text_field :video_url, autocomplete: "off" %>
  </p>

  <p>
    <%= form.label :recipe_details %>
    <%= form.rich_text_area :recipe_details %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
 
<% end %>
