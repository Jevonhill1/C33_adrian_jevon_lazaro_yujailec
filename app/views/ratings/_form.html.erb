<%= form_with(model: [recipe, rating], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :rating %>
    <%= form.number_field :score, min: 1, max: 5, class: "form-control" %>
  </div>
 
  <div class="actions">
    <%= form.submit nil, class: "btn btn-primary" %>
  </div>
<% end %>
