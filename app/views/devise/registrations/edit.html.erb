<div class="edit-registration-info">
<h1><%= t('.title', resource: resource_name.to_s.humanize) %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= bootstrap_devise_error_messages! %>
    <%= f.label :email, :class => "edit-form"%>
    <%= f.email_field :email, autofocus: true, autocomplete: 'off', :class => "edit-form" %>
    <%= f.label :username %>
    <%= f.text_field :username, autocomplete: 'off', :class => "edit-form" %>
    <%= f.label "Password, Leave blank if it will be unchanged." %>
    <%= f.password_field :password, autocomplete: 'off', :class => "edit-form" %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'off', :class => "edit-form" %>
    <%= f.label :current_password %>
    <%= f.password_field :current_password, autocomplete: 'off', :class => "edit-form" %>
    <%= t('.we_need_your_current_password_to_confirm_your_changes') %>
    <%= f.submit t('.update'), class: 'btn btn-success mt-4 efbtn' %>
<% end %>

<p><%= t('.unhappy') %>? <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %>.</p>

<%= link_to t('.back'), :back %>
</div>