<div class="edit-user-info">
<h1><%= t('.change_your_password') %></h1>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= bootstrap_devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
    <%= f.label :password, t('.new_password') %>
    <%= f.password_field :password, autofocus: true  %>
    <% if @minimum_password_length %>
      <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
    <% end %>
    <%= f.label :password_confirmation, t('.confirm_new_password') %>
    <%= f.password_field :password_confirmation, autocomplete: 'off'  %>
    <%= f.submit t('.change_my_password'), class: 'btn btn-success mt 4' %>
<% end %>
<%= render 'devise/shared/links' %>
</div>